{
  "name": "event-dispenser",
  "version": "0.1.3",
  "description": "An event emitter library written in TypeScript.",
  "keywords": [
    "event",
    "event-puber",
    "event-dispenser",
    "event-emitter",
    "event-source",
    "pub-sub"
  ],
  "license": "MIT",
  "author": "ricky",
  "repository": {
    "type": "git",
    "url": "https://github.com/rickkky/event-dispenser"
  },
  "main": "dist/index.js",
  "module": "dist/event-dispenser.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --format umd,cjs,esm",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "commit:cz": "git-cz",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && tsdx lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.23",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.1.0",
    "pretty-quick": "^2.0.1",
    "standard-version": "^7.0.1",
    "tsdx": "^0.11.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {}
}
